{% extends 'base.html.twig' %}

{% block title %}Vitrine index{% endblock %}

{% block body %}
    <h1>Vitrine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>

                <th>New</th>
                <th>Price</th>
                <th>Available</th>
                <th>Description</th>
 
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vitrine in vitrines %}
            <tr>
                <td>{{ vitrine.id }}</td>
                <td>{{ vitrine.Name }}</td>

                <td>{{ vitrine.New ? 'Yes' : 'No' }}</td>
                <td>{{ vitrine.Price }}</td>
                <td>{{ vitrine.Available ? 'Yes' : 'No' }}</td>
                <td>{{ vitrine.Description }}</td>

                <td>
                    <a href="{{ path('app_vitrine_show', {'id': vitrine.id}) }}">show</a>
                    <a href="{{ path('app_vitrine_edit', {'id': vitrine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vitrine_new') }}">Create new</a>
{% endblock %}
