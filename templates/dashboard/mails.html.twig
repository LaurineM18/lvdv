{% extends 'base.html.twig' %}

{% block title %}Tous les emails{% endblock %}

{% block body %}
<div class="dashboard_vitrines">

    <h1>Tous les emails</h1>
    
    <ul>
        {% for mail in mails %}
        <li>{{mail}} 
        <form method="post" action="{{ path('app_delete_mail', {'id': mail.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mail.id) }}">
            <button class=" btn_admin btn_admin_delete">X Supprimer</button>
        </form>
        </li>
        {% endfor %}
    </ul>


    <a class="dashboard_link" href="{{ path('app_dashboard_index') }}">Retour au tableau de bord</a>
</div>

{% endblock %}
