            </div>
            <div>
                <img class="img_personalization" src="{{ asset('/assets/img/peinture.JPG') }}" alt="Vitrine Atelier La Pie - personnalisation" />
                <p>Vitrine Atelier La Pie</p>
            </div>
            <div>
                <img class="img_personalization" src="{{ asset('/assets/img/casimir.JPG') }}" alt="Vitrine Casimir - personnalisation" />
                <p>Vitrine Casimir</p>
            </div>

            </div>
        </div>
        <a class="link" href="{{path('app_vitrines', {'new' : 'toutes-les-vitrines'})}}">Voir toutes les vitrines</a>
    </div>

<script src="{{asset('js/index.js')}}"></script>
{% endblock %}
