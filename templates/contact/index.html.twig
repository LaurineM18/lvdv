{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <div class="dashboard_container">
        <h1>Messages reçus</h1>
        {% for message in messages %}
            <p>Nom : {{ message.lastname }}</p>
            <p>Email : {{ message.email }}</p>
            <p>Objet : {{ message.subject }}</p>
            <p>Message : {{ message.message }}</p>
            <form method="post" action="{{ path('app_delete_message', {'id': message.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet élément ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
            <button class=" btn_admin btn_admin_delete">X Supprimer</button>
            </form>
            <hr>
        {% endfor %}


        <a class="dashboard_link" href="{{ path('app_dashboard_index') }}">Retour au tableau de bord</a>
    </div>

{% endblock %}
